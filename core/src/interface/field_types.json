{
  "text": {
    "name": "Text",
    "dataTypes": [{
        "type": "character varying",
        "default": true }],
    "settings": [
        {
          "name": "Placeholder Text",
          "type": "text",
          "handle": "placeholder",
          "default": "Enter text here"
        },
        {
          "name": "Character Limit",
          "type": "integer",
          "handle": "limit",
          "default": 280
        },
        {
          "name": "Allow Line Breaks",
          "type": "boolean",
          "handle": "line_breaks",
          "default": false
        }
    ]
  },
  "asset": {
    "name": "Asset",
    "dataTypes": [{
        "type": "character varying",
        "default": true }],
    "settings": [
      {
        "name": "Upload Location",
        "type": "text",
        "handle": "location",
        "default": "/public/assets/images"
      },
      {
        "name": "Restrict File Types",
        "type": "checkboxes",
        "handle": "types",
        "default": ["png","pdf","jpg","jpeg","svg"],
        "options": [
          {
            "name": "Image",
            "handle": "img",
            "default": true
          },
          {
            "name": "Compressed",
            "handle": "zip",
            "default": true
          },
          {
            "name": "Excel",
            "handle": "excel",
            "default": true
          },
          {
            "name": "HTML",
            "handle": "html",
            "default": true
          },
          {
            "name": "PDF",
            "handle": "pdf",
            "default": true
          },
          {
            "name": "Word",
            "handle": "word",
            "default": true
          }
        ]
      },
      {
        "name": "Validate",
        "type": "boolean",
        "handle": "validate",
        "default": false
      }
    ]
  },
  "lightswitch": {
    "name": "Lightswitch",
    "dataTypes": [{
        "type": "boolean",
        "default": true }],
    "settings": [
      {
        "name": "Default",
        "type": "boolean",
        "handle": "default",
        "default": true
      }
    ]
  },
  "checkboxes": {
    "name": "Checkboxes",
    "dataTypes": [{
        "type": "boolean[]",
        "default": true }],
    "settings": [
      {
        "name": "Options",
        "type": "repeating",
        "handle": "options",
        "fields": [
          {
            "name": "Label",
            "type": "text",
            "handle": "label"
          },
          {
            "name": "Value",
            "type": "text",
            "handle": "value"
          },
          {
            "name": "Default",
            "type": "default",
            "handle": "default"
          },
          {
            "name": "Position",
            "type": "integer",
            "handle": "position"
          }
        ]
      }
    ]
  },
  "color": {
    "name": "Color",
    "dataTypes": [{
        "type": "character varying(10)",
        "default": true }],
    "settings": [
      {
        "name": "Default",
        "type": "color",
        "handle": "default",
        "default": "ffffff"
      }
    ]
  },
  "date_time": {
    "name": "Date/Time",
    "dataTypes": [{
        "type": "timestamp with time zone",
        "default": true }],
    "settings": [
      {
        "name": "Display",
        "type": "radio",
        "handle": "display",
        "options": [
          {
            "name": "Date",
            "handle": "date",
            "default": true
          },
          {
            "name": "Time",
            "handle": "time"
          },
          {
            "name": "Date/Time",
            "handle": "datetime"
          }
        ]
      }
    ]
  },
  "dropdown": {
    "name": "Dropdown",
    "dataTypes": [{
        "type": "character varying",
        "default": true }],
    "settings": [
      {
        "name": "Options",
        "type": "repeating",
        "handle": "options",
        "fields": [
          {
            "name": "Value",
            "type": "text",
            "handle": "value"
          },
          {
            "name": "Position",
            "type": "integer",
            "handle": "position"
          },
          {
            "name": "Default",
            "type": "default",
            "handle": "default"
          }
        ]
      }
    ]
  },
  "email": {
    "name": "Email",
    "dataTypes": [{
        "type": "character varying(100)",
        "default": true }],
    "settings": [
      {
        "name": "Placeholder Text",
        "type": "text",
