      {
        "name": "Prefix Text",
        "type": "text",
        "handle": "prefix"
      },
      {
        "name": "Suffix Text",
        "type": "text",
        "handle": "suffix"
      }
    ]
  },
  "radio": {
    "name": "Radio",
    "dataTypes": [{
        "type": "integer",
        "default": true }],
    "settings": [
      {
        "name": "Options",
        "type": "repeating",
        "handle": "options",
        "fields": [
          {
            "name": "Value",
            "type": "text",
            "handle": "value"
          },
          {
            "name": "Position",
            "type": "integer",
            "handle": "position"
          },
          {
            "name": "Default",
