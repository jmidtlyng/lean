        "type": "association",
        "default": true }],
    "settings": [
      {
        "name": "Source",
        "type": "source",
        "handle": "source",
        "thing": "entity_type"
      },
      {
        "name": "Limit",
        "type": "integer",
        "handle": "limit"
      },
      {
        "name": "Allow Self-Relations",
        "type": "boolean",
        "handle": "self_relations",
        "default": false
      },
      {
        "name": "Validate Related Entries",
        "type": "boolean",
        "handle": "validate",
        "default": false
      }
    ]
  },
