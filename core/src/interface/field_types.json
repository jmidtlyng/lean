  "table": {
    "name": "Table",
    "dataTypes": [{
        "type": "jsonb",
        "default": true }],
    "settings": [
      {
        "name": "Columns",
        "type": "repeating",
        "handle": "columns",
        "fields": [
          {
            "name": "Heading",
            "type": "text",
            "handle": "value"
          },
          {
            "name": "Handle",
            "type": "text",
            "handle": "handle"
          },
          {
            "name": "Type",
            "type": "radio",
            "options": [
              {
                "name": "Checkbox",
                "handle": "checkbox"
              },
              {
                "name": "Color",
                "handle": "color"
              },
              {
                "name": "Dropdown",
                "handle": "dropdown"
              },
              {
                "name": "Email",
                "handle": "email"
              },
              {
                "name": "Multi-line Text",
                "handle": "large_text"
              },
              {
                "name": "Number",
                "handle": "number"
              },
              {
                "name": "Single-line Text",
                "handle": "text",
                "default": true
              },
              {
                "name": "Time",
                "handle": "time"
              },
              {
                "name": "URL",
                "handle": "url"
              }
            ]
          }
        ]
      },
      {
        "name": "Min",
        "type": "integer",
        "handle": "min"
      },
      {
        "name": "Max",
        "type": "integer",
        "handle": "max"
      },
      {
        "name": "New Row Label",
        "type": "text",
        "handle": "new_row_lbl"
      }
    ]
  },
