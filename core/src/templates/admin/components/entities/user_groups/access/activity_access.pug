if activity.root_id == null
  span
    label Read
    input(type="checkbox"
      hx-post="/admin/actions/entity_type_activity_account_group_access/create"
      hx-vars="read: true"
      hx-include="#userGroupId, #userGroupAccessEntityTypeId"
      hx-swap="none")
  span
    label Write
    input(type="checkbox"
      hx-post="/admin/actions/entity_type_activity_account_group_access/create"
      hx-vars="write: true"
      hx-include="#userGroupId, #userGroupAccessEntityTypeId"
      hx-swap="none")
else
  span
    label(for="access") Read
    if activity.read
      input(type="checkbox"
        hx-post="/admin/actions/entity_type_activity_account_group_access/update"
        hx-vars="read: false, id: "+activity.root_id
        hx-include="read, id"
        hx-swap="none"
        checked="checked")
    else
      input(type="checkbox"
        hx-post="/admin/actions/entity_type_activity_account_group_access/update"
        hx-vars="read: true, id: "+activity.root_id
        hx-include="read, id"
        hx-swap="none")
  span
    label(for="create") Write
    if activity.write
      input(type="checkbox"
        hx-post="/admin/actions/entity_type_activity_account_group_access/update"
        hx-vars="write: false, id: "+activity.root_id
        hx-include="read, id"
        hx-swap="none"
        checked="checked")
    else
      input(type="checkbox"
        hx-post="/admin/actions/entity_type_activity_account_group_access/update"
        hx-vars="write: true, id: "+activity.root_id
        hx-include="read, id"
        hx-swap="none")
